pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
	t=0
  --create the attributes for the ship
 ship = {sp=1,x=60,y=60}
end

function _update()
--timer goes up one count
 t=t+1
 --if enough time has gone by...
 if(t%12<6) then
--set the ship to the first animation frame
  ship.sp=1
 else
--or set the ship to the second animation frame
  ship.sp=2
 end
end

function _draw()
-- clear the screen...
 cls()
--then draw the ship at its coordinates
 spr(ship.sp,ship.x,ship.y)
end
